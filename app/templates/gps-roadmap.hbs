{{page-title "Próximos passos - Guia GPS"}}
<div class="container px-4 py-2">
    <h2 class="pb-2 border-bottom">Próximos passos</h2>
    <div class="row row-cols-1 row-cols-md-2 align-items-md-center g-5 py-3">
        <div class="col-md-12">
            <div>
                <ul class="timeline">
                    {{#each @model.roadmapItems as |item|}}
                    <Gps::RoadmapItem @icon={{item.icon}} @color={{item.color}} @title={{item.title}}
                        @descriptions={{item.descriptions}} @inverted={{item.inverted}} />
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
